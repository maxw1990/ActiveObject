@PACKAGE_INIT@

get_filename_component(SELF_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)
include(${SELF_DIR}/@PROJECT_NAME@Targets.cmake)

# Forward include directory variable (optional, but nice for users)
set(${PROJECT_NAME}_INCLUDE_DIRS
    "${PACKAGE_PREFIX_DIR}/include/${PROJECT_NAME}-${PROJECT_VERSION}"
)

# Provide the target to find_package consumers
set(@PROJECT_NAME_DIR "${SELF_DIR}")